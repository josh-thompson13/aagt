# Environment Configuration
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_SITE_URL=https://josh-thompson13.github.io/aagt/

# GitHub Pages (static hosting) configuration
# When deploying to GitHub Pages, set this to true
NEXT_PUBLIC_GITHUB_PAGES=false
# If the site is served from a subpath, set the base path (e.g. "/aagt/")
NEXT_PUBLIC_BASE_PATH=

# SEO & Analytics
NEXT_PUBLIC_GOOGLE_VERIFICATION=
NEXT_PUBLIC_FB_VERIFICATION=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_GTM_ID=

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Web3Forms (static form submissions)
NEXT_PUBLIC_WEB3FORMS_KEY=your_web3forms_access_key_here

# Email Configuration (Nodemailer)
# Gmail best practice: create an App Password (Google Account → Security → 2‑Step Verification → App passwords)
# Do NOT commit real credentials; use a local `.env.local` or `.env.production.local` which are git‑ignored
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=info@aagtprivateloans.com.au
TO_EMAIL=info@aagtprivateloans.com.au

# Database (if needed for future features)
DATABASE_URL=

# API Keys for External Services
CREDIT_CHECK_API_KEY=
BUSINESS_REGISTRY_API_KEY=
PROPERTY_VALUATION_API_KEY=

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Feature Flags
FEATURE_ELIGIBILITY_CHECK=true
FEATURE_DOCUMENT_UPLOAD=false
FEATURE_LIVE_CHAT=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Application Settings
MAX_LOAN_AMOUNT=10000000
MIN_LOAN_AMOUNT=150000
DEFAULT_INTEREST_RATE=8.5
MAX_LOAN_TERM=300

# Contact Information
COMPANY_PHONE=+61-2-9999-9999
COMPANY_EMAIL=info@aagtprivateloans.com.au
COMPANY_ADDRESS="Level 1, 123 Business Street, Sydney NSW 2000"

# Social Media
LINKEDIN_URL=https://linkedin.com/company/aagt-private-loans
TWITTER_URL=https://twitter.com/AAGTLoans

# Optional Integrations (for future features)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+61XXXXXXXXX
